@using view_model.Catalog.Categories;
@model CategoryAssignRequest

@{
    ViewData["Title"] = "CategoryAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string valMessage = TempData["Failure"] as string;
}
@section Scripts{ 
    <script type="text/javascript">
        $(function () {
            var mesg = "@Html.Raw(TempData["Failure"])";
            if (mesg != "") toastr.error(mesg);
        });
    </script>
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Product</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Product</li>
                    <li class="breadcrumb-item active">Category</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <form method="post" asp-action="categoryassign">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    @for (var i = 0; i < Model.Categories.Count; i++)
                    {
                        <div class="form-check form-group">
                            <input class="form-check-input" type="checkbox" asp-for="Categories[i].Selected">
                            <label class="form-check-label">@Model.Categories[i].Name</label>
                            <input type="hidden" asp-for="Categories[i].Id" />
                            <input type="hidden" asp-for="Categories[i].Name" />
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a class="btn btn-secondary" asp-action="" asp-controller="product">Back To List</a>
                    <button type="submit" class="btn btn-primary">Approval</button>
                </div>
            </form>
        </div>
    </div>
</section>