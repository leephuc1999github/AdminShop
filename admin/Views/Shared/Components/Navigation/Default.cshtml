        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-sun"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <a href="#" class="dropdown-item">My Profile</a>
                <div class="dropdown-divider"></div>
                <form method="get" asp-action="" asp-controller="login">
                    <button class="dropdown-item" type="submit">Logout</button>
                </form>
            </div>
        </li>
        <li class="nav-item">
            <form method="post" name="formLanguage" asp-action="Language" asp-controller="Home">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="flag-icon @Model.Icons[positionCurrentLanguage]"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right p-0">
                    @foreach (var item in Model.Languages)
                    {
                        string icon = Model.Icons[i];
                        <a href="javascript:void(0)" name="language" data-id="@item.Value" class="dropdown-item @(icon == Model.Icons[positionCurrentLanguage] ? "active":"")">
                            <i class="flag-icon @(icon==null?"":icon) mr-2"></i> @item.Text
                        </a>
                        i++;
                    }
                </div>
                <input type="hidden" name="CurrentLanguageId" value="" />
                <input type="hidden" name="ReturnUrl" value="@Context.Request.Path" />
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
