    int i = 0;
    int positionCurrentLanguage = 0;
    for (int p = 0; p < Model.Languages.Count; p++)
    {
        if (Model.Languages[p].Value == Model.CurrentLanguageId)
        {
            positionCurrentLanguage = p;
            break;
        }
    }
}
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="javascript:void(0)" class="nav-link">Contact</a>
        </li>
    </ul>
    <div class="carousel slide w-100 border" id="corona" data-ride="carousel" data-interval="5000" style="margin:0 20px;border-radius:30px">
        <div class="carousel-inner">
            <div class="carousel-item active" id="the-world">
