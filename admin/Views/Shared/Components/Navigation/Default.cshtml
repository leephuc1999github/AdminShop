<script type="text/javascript">
    $(document).ready(function () {
        const settingsVietNam = {
            "async": true,
            "crossDomain": true,
            "url": "https://covid-19-tracking.p.rapidapi.com/v1/Vietnam",
            "method": "GET",
            "headers": {
                "x-rapidapi-key": "1ea4efebfamshf0a205ab9e87a07p166590jsn5360d16176c4",
                "x-rapidapi-host": "covid-19-tracking.p.rapidapi.com"
            }
        };
        const settingsTheWorld = {
            "async": true,
            "crossDomain": true,
            "url": "https://covid-19-tracking.p.rapidapi.com/v1/world",
            "method": "GET",
            "headers": {
                "x-rapidapi-key": "1ea4efebfamshf0a205ab9e87a07p166590jsn5360d16176c4",
                "x-rapidapi-host": "covid-19-tracking.p.rapidapi.com"
            }
        };

        $.ajax(settingsVietNam).done(function (response) {
            var source = `<div class="row">
                <div class="col-md-2 text-center bg-danger">${response["Country_text"]}</div>
                <div class="col-md-10 text-center">
                    Total Cases : <span class="text-red">${response["Total Cases_text"]}</span>
                    &emsp;  Death Cases : <span class="text-dark">${response["Total Deaths_text"]}</span>
                    &emsp; Recovered Cases : <span class="text-success">${response["Total Recovered_text"]}</span>
                </div>
                </div>`;
            $("#viet-nam").html(source);
        });
        $.ajax(settingsTheWorld).done(function (response) {
            var source = `<div class="row">
                <div class="col-md-2 text-center bg-danger">${response["Country_text"]}</div>
                <div class="col-md-10 text-center">
                    Total Cases : <span class="text-red">${response["Total Cases_text"]}</span>
                    &emsp; Death Cases : <span class="text-dark">${response["Total Deaths_text"]}</span>
                    &emsp; Recovered Cases : <span class="text-success">${response["Total Recovered_text"]}</span>
                </div>
                </div>`;
            $("#the-world").html(source);
        });
    })
</script>